   CloseButton.Size = UDim2.new(0, 30, 0, 30)
   CloseButton.Position = UDim2.new(1, -30, 0, 0)
   CloseButton.Text = "X"
   CloseButton.Font = Enum.Font.GothamBold
   CloseButton.TextSize = 16
   CloseButton.TextColor3 = Color3.new(1, 1, 1)
   CloseButton.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
   CloseButton.BorderSizePixel = 0
   CloseButton.MouseButton1Click:Connect(function()
       -- Protege contra m√∫ltiplos unloads e erros
       if type(unloadYzz1Hub) == "function" then
           local ok, err = pcall(unloadYzz1Hub)
           if not ok then
               warn("[Yzz1Hub] Erro ao descarregar: " .. tostring(err))
               if ScreenGui and ScreenGui.Parent then
                   ScreenGui:Destroy()
               end
           end
       else
           -- Fallback destr√≥i a interface se a fun√ß√£o n√£o existir
           if ScreenGui and ScreenGui.Parent then
               ScreenGui:Destroy()
           end
       end
       -- Garante que o gui n√£o fique vis√≠vel
       guiVisible = false
   end)
   
