   -- Register mouse click for macro recording
   Mouse.Button1Down:Connect(function()
       if isRecording then
           local pos = Mouse.Hit.Position
           local unitName = "Unknown"
   
           if #unitQueue > 0 then
               unitName = table.remove(unitQueue, 1)
           end
   
           insertMacroStep(macroData, {
               action = "place",
               unit = unitName,
               pos = {X = pos.X, Y = pos.Y, Z = pos.Z},
               timestamp = os.clock()
           })
   
           addLogMessage("‚úÖ Position recorded: " .. string.format("%.2f, %.2f, %.2f", pos.X, pos.Y, pos.Z) .. " | Unit: " .. unitName)
       end
   end)
   
   -- Fun√ß√£o para carregar um macro salvo - completamente reescrita
   local function loadMacro(name)
       -- Verifica√ß√£o de seguran√ßa com pcall
       pcall(function()
           if not isfile("MacroAnimeLastStand_Yzz1Hub/" .. name .. ".json") then
               addLogMessage("‚ùå Erro: Macro '" .. name .. "' n√£o encontrado!")
               return
           end
           
           local success, result = pcall(function()
               local content = readfile("MacroAnimeLastStand_Yzz1Hub/" .. name .. ".json")
               return HttpService:JSONDecode(content)
           end)
           
           if success and result then
               macroData = result
               addLogMessage("‚úÖ Macro '" .. name .. "' carregado com sucesso! " .. #macroData .. " posi√ß√µes.")
               
               -- Tenta atualizar o preview com pcall para evitar erros
               pcall(function()
                   local preview = macroSection:FindFirstChild("MacroPreview")
                   if preview then
                       local text = "Macro: " .. name .. "\nTotal: " .. #macroData .. " posi√ß√µes\n\n"
                       
                       -- Limitando a quantidade para evitar erros
                       local maxToShow = math.min(5, #macroData)
                       for i = 1, maxToShow do
                           local entry = macroData[i]
                           if entry and entry.pos then
                               text = text .. i .. ". " .. (entry.unit or "?") .. " @ " .. 
                                     math.floor(entry.pos.X or 0) .. "," .. 
                                     math.floor(entry.pos.Y or 0) .. "," .. 
                                     math.floor(entry.pos.Z or 0) .. "\n"
                           end
                       end
                       
                       if #macroData > maxToShow then
                           text = text .. "... e mais " .. (#macroData - maxToShow) .. " posi√ß√µes."
                       end
                       
                       preview.Text = text
                   end
               end)
               
               -- Atualiza o painel de status ap√≥s carregar o macro
               updateMacroStatusPanel()
           else
               addLogMessage("‚ùå Erro ao carregar macro: Formato inv√°lido!")
           end
       end)
   end
   
   -- Fun√ß√£o para salvar um macro
   local function saveMacro(name)
       if #macroData == 0 then
           addLogMessage("‚ùå Erro: N√£o h√° posi√ß√µes para salvar!")
           return false
       end
       
       if name == "" then
           addLogMessage("‚ùå Erro: Por favor, digite um nome para o macro!")
           return false
       end
       
       local success, errorMsg = pcall(function()
           local json = HttpService:JSONEncode(macroData)
           writefile("MacroAnimeLastStand_Yzz1Hub/" .. name .. ".json", json)
       end)
       
       if success then
           addLogMessage("‚úÖ Macro '" .. name .. "' salvo com sucesso! " .. #macroData .. " posi√ß√µes.")
           updateMacroList()
           return true
       else
           addLogMessage("‚ùå Erro ao salvar macro: " .. tostring(errorMsg))
           return false
       end
   end