    webhookUrl = readfile("MacroAnimeLastStand_Yzz1Hub/webhook.txt")
end

-- Add log message function que ser√° definida corretamente mais tarde
local function addLogMessage(message)
    table.insert(logMessages, os.date("[%H:%M:%S] ") .. message)
    -- Keep only the last 100 messages
    if #logMessages > 100 then
        table.remove(logMessages, 1)
    end
    
    print(message) -- Print to console for debug
    
    -- A atualiza√ß√£o da UI ser√° feita depois que todas as fun√ß√µes estiverem definidas
    -- N√£o chamamos updateLogDisplay aqui para evitar refer√™ncia circular
end

